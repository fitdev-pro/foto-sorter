<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.Controller">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="Plik">
            <items>
                  <MenuItem fx:id="menuFileOpen" mnemonicParsing="false" onAction="#rootGalleryChoseAction" text="Otwórz galerię" />
                  <MenuItem fx:id="menuFileSettings" disable="true" mnemonicParsing="false" text="Ustawienia galerii" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Pomoc">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="newGalleryLabel" disable="true" text="Nowa galeria">
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </Label>
      <HBox fx:id="newGalleryPathPane">
         <children>
            <TextField fx:id="newGalleryPathTextField" disable="true" editable="false" prefHeight="27.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="newGalleryChoseBtn" disable="true" mnemonicParsing="false" onAction="#newGalleryChoseAction" text="Wybierz">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox prefWidth="200.0" spacing="10.0">
         <children>
          <Button fx:id="changeNameBtn" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#checkNamesAction" text="Zmiana nazwy" />
            <Button disable="true" mnemonicParsing="false" onAction="#checkDuplicatesAction" text="Duplikaty" />
            <Button disable="true" mnemonicParsing="false" onAction="#checkOrderAction" text="Sortowanie" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tableView" prefHeight="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="tableColumnSource" prefWidth="75.0" text="Plik źródłowy" />
          <TableColumn fx:id="tableColumnResult" prefWidth="75.0" text="Wynik" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="TOP_RIGHT" prefWidth="200.0" spacing="10.0">
         <children>
          <Button fx:id="run" disable="true" mnemonicParsing="false" text="Wykonaj" />
            <Button fx:id="cancel" disable="true" mnemonicParsing="false" onAction="#clear" text="Anuluj" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Accordion>
        <panes>
          <TitledPane animated="false" text="Szczegóły">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label fx:id="imageLabel" text="Opis" />
                        <ImageView fx:id="image" fitHeight="240.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </content>
          </TitledPane>
        </panes>
      </Accordion>
   </children>
</VBox>
